{
  "name": "electron-todo",
  "version": "1.0.0",
  "description": "Simple todo app",
  "homepage": "./",
  "main": "./public/electron.js",
  "scripts": {
    "start": "vite & electronmon .",
    "start:web": "vite --open",
    "build": "vite build",
    "build:mac": "npm run build && electron-builder -m -c.extraMetadata.main=build/electron.js",
    "build:win": "npm run build && electron-builder -w -c.extraMetadata.main=build/electron.js",
    "build:linux": "npm run build && electron-builder -l -c.extraMetadata.main=build/electron.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krauchuk/electron-todo.git"
  },
  "author": "Ihar Krauchuk",
  "license": "MIT",
  "devDependencies": {
    "electron": "^25.2.0",
    "electron-builder": "^24.4.0",
    "electronmon": "^2.0.2",
    "vite": "^4.3.9"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  },
  "build": {
    "appId": "com.electron.todoapp",
    "productName": "Todo-app",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    }
  }
}
